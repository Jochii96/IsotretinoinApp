<?xml version="1.0" encoding="utf-8"?>
<!--Layout of the Disclaimer screen-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cadet_blue"
    tools:context=".Disclaimer">
<!--Scrolling text view displaying disclaimer -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="326dp"
        android:layout_height="435dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="158dp"
        android:fontFamily="@font/fontpoppins"
        android:scrollbars="vertical"
        android:text="@string/disc"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--Button that navigates to the next activity (Profile if first time run, Main Screen if not)-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAgree"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="45dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/fontpoppins"
        android:text="@string/agree"
        android:textColor="@color/ash_grey"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <!--Title of the Screen displayed at the top-->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:fontFamily="@font/fontpoppins"
        android:inputType="text"
        android:text="DISCLAIMER"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>