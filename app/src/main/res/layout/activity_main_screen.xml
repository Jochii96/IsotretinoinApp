<?xml version="1.0" encoding="utf-8"?><!--Layout of the Main screen-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tiffany"
    android:backgroundTint="@color/tiffany"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">
        <!--Button that opens menu on click-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMenu"
            android:layout_width="10dp"
            android:layout_height="59dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@color/tiffany"
            android:backgroundTint="@color/tiffany"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
            android:stateListAnimator="@null" />

        <!--User's name is imported and displayed in this textview-->
        <TextView
            android:id="@+id/importName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:width="150dp"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--Name of the application is displayed in this view-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/fontpoppins"
        android:gravity="center|end"
        android:text="Isotretinoin Journey"
        android:textSize="30sp"
        android:textStyle="bold" />
    <!--Current date is displayed in this view-->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/fontpoppins"
        android:gravity="top|end"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">
        <!--Number of days since the start of the treatment should be displayed here-->
        <TextView
            android:id="@+id/importDays"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center"
            android:text="no" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
        <!--Description of previous display-->
        <TextView
            android:id="@+id/textView13"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginEnd="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center_vertical"
            android:text=" Days" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">
        <!--Number of months since the start of the treatment should be displayed here-->
        <TextView
            android:id="@+id/importMonths"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center"
            android:text="no" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
        <!--Description of previous display-->
        <TextView
            android:id="@+id/textView15"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginEnd="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center_vertical"
            android:text=" Months" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">
        <!--User's entered dose is imported and displayed in this textview-->
        <TextView
            android:id="@+id/importDailyDose"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center"
            android:text="no" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
        <!--Description of previous display-->
        <TextView
            android:id="@+id/textView17"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginEnd="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center_vertical"
            android:text=" Daily dose" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">
        <!--Cumulated dose since the start of the treatment should be displayed here-->
        <TextView
            android:id="@+id/importCumulativeDose"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center"
            android:text="no" />

        <Space
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
        <!--Description of previous display-->
        <TextView
            android:id="@+id/TextCumulativeDose"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="90dp"
            android:layout_weight="1"
            android:background="@color/bright_tiff"
            android:fontFamily="@font/fontpoppins"
            android:gravity="center_vertical"
            android:text=" Cumulative dose"
            android:textAlignment="textStart" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="239dp">
        <!--Gif ilustrating caterpillar changing into a butterfly-->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView2"
            android:layout_width="391dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/metam"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loopCount="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--Button that triggers pop up randomised tips-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonTips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/tiffany"
            android:fontFamily="@font/fontpoppins"
            android:text="Tips and tricks"
            android:textColor="#055553"
            android:textSize="26sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>